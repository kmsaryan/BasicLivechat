    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.5.2",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.8.1",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "react-scripts": "^5.0.1"
  }
}
